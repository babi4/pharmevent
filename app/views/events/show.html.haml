%ul.breadcrumb
  %li
    = link_to 'Мероприятия', events_path
    %span.divider /
  %li.active
    = @event.name
    %span.divider
      |
  %li
    = link_to 'редактирование', edit_event_path(@event)

%p#notice= notice

%h3.no-margin.pagination-centered= "#{@event.city}, #{@event.name}"
%h4.pagination-centered.event-subtitle= "#{@event.date_start.strftime("%d.%m.%Y")} - #{@event.date_end.strftime("%d.%m.%Y")}"

.pagination-centered
  = link_to 'Добавить безналичный расход', new_event_documents_beznal_rashod_path(@event), :class => 'btn'
  = link_to 'Добавить наличный расход',    new_event_documents_nal_rashod_path(@event), :class => 'btn'
  = link_to 'Добавить наличный приход',    new_event_documents_nal_prihod_path(@event), :class => 'btn'
  = link_to 'Выставить счёт',              new_event_documents_beznal_schet_path(@event), :class => 'btn'

/ = link_to 'Просмотр безналичный расход', event_documents_beznal_rashods_path(@event)
/ \|||
/ = link_to 'Просмотр наличный расход',    event_documents_nal_rashods_path(@event)
/ \|||
/ = link_to 'Просмотр наличный приход',    event_documents_nal_prihods_path(@event)
/ \|||
/ = link_to 'Выставл. счета',              event_documents_beznal_schets_path(@event)

%hr

%h3.pagination-centered Оплата мероприятия: #{@prihod_summ} руб.
%br
%h4.pagination-centered Приход безналичный
%table.table.table-striped.table-condensed.table-hover.table-links.table-center
  %thead.thead-small
    %tr
      %th.td-5 №
      %th.text-left Плательщик
      %th.td-10 Счет №
      %th.td-10 Дата счета
      %th.td-10 Дата оплаты
      %th.td-10 Сумма
      %th.td-10 Включая НДС
      %th.td-10 Действия

  - @event.documents_beznal_schets.includes(:company).each do |doc|
    %tr
      %td
      %td.text-left= link_to doc.company[:name], doc.company
      %td= doc.num_schet
      %td= doc.date_schet.strftime("%d.%m.%y")
      %td= doc.payment_date
      %td= doc.summ
      %td= doc.nds
      %td= '??'
  %tr
    %td{colspan: 5}
      %span.pull-right Итого:
    %td= @event.documents_beznal_schets.sum(:summ)
    %td= @event.documents_beznal_schets.sum(:nds)
    %td
%br
%h4.pagination-centered Приход наличный
%table.table.table-striped.table-condensed.table-hover.table-links.table-center
  %thead.thead-small
    %tr
      %th.td-5 №
      %th.text-left Плательщик
      %th.text-left.td-30 Назначение платежа
      %th.td-10 Дата оплаты
      %th.td-10 Сумма
      %th.td-10 Действия

  - @event.documents_nal_prihods.each do |doc|
    %tr
      %td
      %td.text-left= doc.company
      %td.text-left= doc.description
      %td= doc.date.strftime("%d.%m.%Y")
      %td= doc.summ
      %td= '??'
  %tr
    %td{colspan: 4}
      %span.pull-right Итого:
    %td= @event.documents_nal_prihods.sum(:summ)
    %td

%h3.pagination-centered Расход мероприятия: #{@rashod_summ} руб.
%h4.pagination-centered Расход безналичный
%table.table
  %thead
    %tr
      %th №
      %th Плательщик
      %th Платежные документы
      %th Статус
      %th Сумма
      %th Включая НДС
      %th Действия

  - @event.documents_beznal_rashods.each do |doc|
    %tr
      %td
      %td
        %table
          %tr
            %td= doc.company
          %tr
            %td= doc.description
      %td
        %table
          %tr
            %td Счет №
            %td= doc.num_schet
          %tr
            %td Дата счета
            %td= doc.date_schet
          %tr
            %td Дата оплаты
            %td ???
          %tr
            %td № п/п
            %td= doc.info_pp
          %tr
            %td Счет фактура №
            %td= doc.info_schet_factura
          %tr
            %td Дата сч. фактуры
            %td= doc.info_date_schet
          %tr
            %td Акт №
            %td= doc.info_act
          %tr
            %td Дата акта
            %td= doc.info_date_act
          %tr
            %td Договор №
            %td= doc.dogovor_num
          %tr
            %td Дата договора
            %td= doc.dogovor_date
      %td
        %table
          %tr
            %td ??
          %tr
            %td= doc.lectors ? 'Физ. лицо' : 'Агент'
      %td= doc.summ
      %td= doc.nds
      %td= '??'
  %tr
    %td
    %td
    %td
    %td Итого:
    %td= @event.documents_beznal_rashods.sum(:summ)
    %td= @event.documents_beznal_rashods.sum(:nds)
    %td

%h4.pagination-centered Расход наличный
%table.table
  %thead
    %tr
      %th №
      %th Получатель
      %th Назначение платежа
      %th Статус
      %th Дата оплаты
      %th Сумма
      %th Действия

  - @event.documents_nal_rashods.each do |doc|
    %tr
      %td
      %td= doc.company
      %td= doc.description
      %td= doc.lectors ? 'Физ. лицо' : 'Агент'
      %td= doc.date
      %td= doc.summ
      %td= '??'
  %tr
    %td
    %td
    %td
    %td
    %td Итого:
    %td= @event.documents_nal_rashods.sum(:summ)
    %td

%h4.pagination-centered Прибыль и НДС
%table.table
  %thead
    %tr
      %th Прибыль без учета НДС
      %th НДС к уплате (с выставленных счетов)
      %th НДС к зачету (с оплаченных счетов)
      %th Остаток НДС к уплате
      %th Прибыль с учетом НДС

  %tbody
    %tr
      %td= @prihod_summ - @rashod_summ
      %td= @nds_k_uplate = @event.documents_beznal_schets.sum(:nds)
      %td= @nds_k_zachetu = @event.documents_beznal_rashods.sum(:nds)
      %td= @nds_k_uplate - @nds_k_zachetu
      %td= (@prihod_summ - @rashod_summ) - (@nds_k_uplate - @nds_k_zachetu)

- content_for :title do
  Мероприятия / #{@event.name}