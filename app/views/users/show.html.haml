%ul.breadcrumb
  %li
    = link_to 'Пользователи', users_path
    %span.divider /
  %li.active
    = @user.name
    %span.divider
      |
  %li
    = link_to 'редактирование', edit_user_path(@user)

%h4= @user.name
- if @user.email
  %p
    %b E-mail
    %br
    = @user.email
%p
  %b Роль
  %br
  = t "roles.#{@user.roles.first.name}", :locale => :ru
- if @user.salary
  %p
    %b Зарплата
    %br
    = "#{@user.salary} руб."
- if @user.percent
  %p
    %b Процент
    %br
    = "#{@user.percent}%"

- content_for :title do
  Пользователи / #{@user.name}
