.modal{:id => "password-options-#{user.id}", :style => "display: none;"}
  = simple_form_for user, :url => change_pass_user_path(user), :html => {:method => :put, :class => 'form-horizontal', :data => { :confirm => "Вы уверены?" } } do |f|
    .modal-header
      %a.close{"data-dismiss" => "modal"} ×
      %h3 #{user.name} - новый пароль
    .modal-body
      = f.input :password, :label => 'Новый пароль'
      = f.input :password_confirmation, :label => 'Новый пароль еще раз' 
    .modal-footer
      = f.submit "Сохранить пароль", :class => "btn"

.modal{:id => "role-options-#{user.id}", :style => "display: none;"}
  = simple_form_for user, :url => user_path(user), :html => {:method => :put, :class => 'form-horizontal' } do |f|
    .modal-header
      %a.close{"data-dismiss" => "modal"} ×
      %h3 Change Role
    .modal-body
      = f.input :role_ids, :collection => Role.all, :as => :radio_buttons, :label_method => lambda {|t| t.name.titleize}, :label => false, :item_wrapper_class => 'inline'
    .modal-footer
      = f.submit "Change Role", :class => "btn"
      %a.btn{"data-dismiss" => "modal", :href => "#"} Close


