= simple_form_for(@couriers_task, :html => {:class => 'form-validate form-courier-task' }) do |f|
  = f.error_notification

  .row
    .span4
      %label Откуда
      = f.association :from_couriers_company, :label => false, :input_html => { :class => "span4", "data-required" => true }

      %label Куда
      = f.association :to_couriers_company, :label => false, :input_html => { :class => "span4", "data-required" => true }

      %label.no-margin Когда
      .input-prepend.date-picker.inline-block{"data-date" => @date}
        %span.add-on
          %i.icon-calendar
        %input.input-date{:type => "text", :name => 'date', :value => @date}
      %input.timepicker.inline-block{:type => "text", :name => 'time', :value => @time}
      %i.icon-time.timepicker-icon

      %br

      = f.button :submit, 'Сохранить', :class => 'btn btn-primary btn-primary-submit'