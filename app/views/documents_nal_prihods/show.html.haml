%ul.breadcrumb
  %li
    = link_to 'Мероприятия', events_path
    %span.divider /
  %li
    = link_to @event.name, @event
    %span.divider /
  %li.active
    Наличный приход
  - if can? :update, @documents_nal_prihod
    %li
      %span.divider
        |
      = link_to 'редактирование', edit_event_documents_nal_prihod_path(@event, @documents_nal_prihod)

%p#notice= notice

%p
  = event_state_text @documents_nal_prihod.state
  %span= @documents_nal_prihod.state_note
%p
  %b Плательщик
  %br
  = @documents_nal_prihod.company
%p
  %b Назначение платежа
  %br
  = @documents_nal_prihod.description
%p
  %b ФИО плательщика
  %br
  = @documents_nal_prihod.name
%p
  %b Телефон плательщика
  %br
  = @documents_nal_prihod.telephone
%p
  %b Сумма
  %br
  = @documents_nal_prihod.summ
%p
  %b Дата оплаты
  %br
  - if @documents_nal_prihod.date.blank?
    —
  - else
    = @documents_nal_prihod.date.strftime("%d.%m.%Y")

- content_for :title do
  Мероприятия / #{@event.name} / Наличный приход